            Clicked="btn_close_clicked"
            CornerRadius="20"
            FontFamily="{StaticResource lr}"
            FontSize="20"
            HeightRequest="40"
            HorizontalOptions="Start"
            Text="x"
            TextColor="{StaticResource vbmgreen}"
            VerticalOptions="Start"
