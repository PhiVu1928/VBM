                            TextColor="{StaticResource vbmgreen}"
                            VerticalOptions="Center" />

                        <Grid
                            HeightRequest="30"
                            VerticalOptions="Center"
                            WidthRequest="30">

                            <Label
                                FontFamily="{StaticResource lbo}"
                                FontSize="20"
                                HorizontalOptions="End"
                                Text="+"
                                TextColor="{StaticResource vbmgreen}"
                                VerticalOptions="Center" />

                        </Grid>

                    </StackLayout>


                    <StackLayout
                        HorizontalOptions="End"
                        Spacing="0"
                        VerticalOptions="Center">

                        <Label
                            FontFamily="{StaticResource lbo}"
                            FontSize="15"
                            HorizontalOptions="End"
                            Text="35,000 d"
                            TextColor="{StaticResource vbmbrick}"
                            VerticalOptions="Center" />

                        <Label
                            FontSize="15"
                            HorizontalOptions="End"
                            Text="Thêm vào giỏ hàng"
                            TextColor="{StaticResource vbmgreen}"
                            VerticalOptions="Center" />

                    </StackLayout>

                </Grid>

            </btn:SfButton>

        </Grid>

        <btn:SfButton
