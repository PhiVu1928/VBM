                            HasShadow="False"
                            HeightRequest="30"
                            WidthRequest="100">

                            <Label
                                HorizontalOptions="Center"
                                Text="M - 29,000"
                                TextColor="{StaticResource vbmbrick}"
                                VerticalOptions="Center" />

                        </border:SfBorder>

                        <border:SfBorder
                            Padding="10,5"
                            BackgroundColor="{StaticResource vbmdeeplightgray}"
                            BorderWidth="0"
                            CornerRadius="20"
                            HasShadow="False"
                            HeightRequest="30"
                            WidthRequest="100">

                            <Label
                                HorizontalOptions="Center"
                                Text="L - 35,000"
                                TextColor="{StaticResource vbmgray}"
                                VerticalOptions="Center" />

                        </border:SfBorder>

                    </StackLayout>

                    <StackLayout Spacing="5">

                        <StackLayout
                            HorizontalOptions="Center"
                            Orientation="Horizontal"
                            Spacing="5">

                            <border:SfBorder
