                BackgroundColor="{StaticResource vbmyellow}"
                Clicked="toCart_clicked"
                CornerRadius="20"
                FontSize="20"
                HeightRequest="60"
                VerticalOptions="End">

                <Grid>

                    <StackLayout
                        HorizontalOptions="Start"
                        Orientation="Horizontal"
                        Spacing="10"
                        VerticalOptions="Center">

                        <Grid
                            HeightRequest="30"
                            VerticalOptions="Center"
                            WidthRequest="30">

                            <Label
                                FontFamily="{StaticResource lbo}"
                                FontSize="20"
                                HorizontalOptions="Start"
                                Text="-"
                                TextColor="{StaticResource vbmgreen}"
                                VerticalOptions="Center" />

                        </Grid>

                        <Label
                            FontFamily="{StaticResource lbo}"
